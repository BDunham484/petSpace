<div class="card col-10 mx-auto my-3" id="#{{post.id}}">
    <div class="card-header">
        <h5>{{pet_name}} the {{pet_type}}<span class="card-subtitle mb-2 text-muted"> w/
                {{user.username}}</span></h5>
        <p class="mb-2 text-muted">{{format_date created_at}}</p>
    </div>

    <img src="https://image.shutterstock.com/image-illustration/404-error-page-not-found-600w-308387615.jpg"
        class="card-img-top" alt="...">
    <hr class="border border-dark border-1 opacity-25 col-12">
    <div class="card-body">
        <p class="card-text">{{post_text}}</p>
    </div>
    <div class="card-footer">
        {{!-- <a href="#{{post.id}}" class="btn btn-info bg-gradient" id="like-btn">Like</a> --}}
        <textarea id="hidden_id">{{post.id}}</textarea>
        {{liked_count}} <a href="#{{id}}" class="like-btn">{{format_plural "Like" liked_count}}</a>
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "Comment" comments.length}}</a>
    </div>
</div>

<script src="/javascript/like.js"></script>