<div class="row dashboard-row">
    <section class="col-2" id="left-column">
        {{!-- Create New Post/Modal Button --}}
        <button type="submit" class="btn mt-5" id="create-new-post" data-bs-toggle="modal"
            data-bs-target="#create-post-modal">+ Create new post</button>

        <!-- Modal -->
        <div class="modal fade" id="create-post-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Tell us about your pet</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-info text-white bg-gradient">Create post</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="col-8" id="center-column">
        {{#if posts.length}}
        <section>
            <h2>Your Dashboard</h2>
            <ul class="post-list">
                {{#each posts as |post|}}
                <li>
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
                </li>
                {{/each}}
            </ul>
        </section>
        {{/if}}
    </section>
    <section class="col-2" id="right-column">

    </section>

</div>


<script src="/javaScript/create-post.js"></script>