<div class="row dashboard-row">
    <section class="d-none d-md-block col-md-2 d-flex flex-column align-items-center" id="left-column">

        <!-- Modal -->
        <div class="modal fade" id="create-post-modal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create a new post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex flex-column align-items-center">
                        <div class="mb-3 form-elements col-10">
                            <label for="post-image" class="form-label"><i class="fa-solid fa-image"></i></label>
                            <input type="text" class="form-control" id="post-image" placeholder="Image">
                        </div>
                        <div class="mb-3 form-elements col-10">
                            <label for="pet-name" class="form-label">What's your pet's name?</label>
                            <input type="text" class="form-control" id="pet-name" placeholder="petName">
                        </div>
                        <div class="mb-3 form-elements col-10">
                            <label for="pet-type" class="form-label">What kind of pet is it?</label>
                            <input type="text" class="form-control" id="pet-type" placeholder="petName">
                        </div>
                        <div class="mb-3 form-elements col-10">
                            <label for="post-text" class="form-label"><i class="fa-solid fa-comment"></i></label>
                            <input type="text" class="form-control" id="post-text" placeholder="Tell us about your pet">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-info text-white bg-gradient" id="create-post">Create
                            post</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="col-12 col-md-8" id="center-column">
        <a href="/dashboard" class="btn btn-secondary refresh mb-3 bg-gradient"> &larr; Back to dashboard</a>
        {{!-- <button href="/dashboard" type="button" class="btn btn-secondary refresh mb-3 bg-gradient">&larr; Back to dashboard</button> --}}
        <h2>
            Edit Post
        </h2>
        
        <form class="edit-post-form">
            <div class="card col-12 col-md-10 col-xxl-7 mx-auto my-3" id="#{{post.id}}">
                <div class="card-header">
                    <input type="text" name="pet-name" class="form-control" value="{{post.pet_name}}"> the
                    <input type="text" name="pet-type" class="form-control" value="{{post.pet_type}}">
                    <span class="card-subtitle mb-2 text-muted"> w/
                        {{post.user.username}}</span>
                    <p class="mb-2 text-muted">{{format_date post.created_at}}</p>
                </div>

                <img src="{{post.post_image}}"
                    class="card-img-top" alt="...">
                <hr class="border border-dark border-1 opacity-25 col-12">
                <div class="card-body">
                    <textarea id="post-text" name="post-text" class="form-control">{{post.post_text}}</textarea>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button onclick="likeClickHandler(this)" class="like-btn btn btn-info bg-gradient"
                        data-id={{post.id}}>{{post.liked_count}} {{format_plural "Like" post.liked_count}}</button>

                    <a href="/post/{{post.id}}" class="btn btn-secondary bg-gradient">{{post.comments.length}}
                        {{format_plural "Comment" post.comments.length}}</a>
                </div>

            </div>
            <div class="d-grid gap-2 col-12 col-md-10 col-xxl-7 my-5 mx-auto">
                <button type="submit" class="btn btn-info bg-gradient">Save post</button>
                <button type="button" class="btn btn-warning bg-gradient delete-post-btn">Delete post</button>
            </div>
        </form>


    </section>
    <section class="d-none d-md-block col-md-2" id="right-column">

    </section>

</div>

<script src="/javascript/create-post.js"></script>
<script src="/javascript/like.js"></script>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>